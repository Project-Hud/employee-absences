.viewer
  box-sizing border-box
  width 100%
  height 100%
  position relative
  overflow hidden
  border 1px solid #ccc

.slider-container
  width 200%
  height 100%
  overflow hidden
  position relative

  &.stacked
    width 100%

    &:first-child

      h3
        transform translateX(0)

    .slider--slide
      width 100%
      height auto
      opacity 1

    h3
      margin 20px 0 5px 0
      margin 5vmin 0 1.35vmin 0
      font-size 29px
      font-size 7.5vmin
      transform translateX(0)

.slider--slide
  box-sizing border-box
  display inline-block
  width 50%
  text-align center
  height 100%
  opacity 0.2
  transition opacity 700ms
  padding 0 10px
  padding 0 2.5vmin
  vertical-align middle
  transform translate3d(0, 0, 0)

  &:first-child
    h3
      transform translateX(50%)

  &.is-active
    opacity 1

    h3
      transform translateX(0)

 h3
  position relative
  transform translateX(-50%)
  margin 45px 0 20px 0
  margin 12vmin 0 5.25vmin 0
  padding 0
  transition-duration 700ms
  transition-timing-function linear
  transform translate3d(0, 0, 0)
  font-size 40px
  font-size 10.5vmin
  font-weight normal
  color white

.slider-one__title
  background-color #000

.slider-two__title
  background-color #000

.slider-three__title
  background-color green

.pagination
  position absolute
  top 10px
  top 3vmin
  right 20px
  right 6vmin
  width 35px
  width 9vmin
  z-index 1000
  text-align right

.controls
  margin 0
  padding 0

.controls li
  width 10px
  width 2.5vmin
  height 10px
  height 2.5vmin
  list-style none
  margin 0 0 0 5px
  margin 0 0 0 1.3vmin
  float left
  border 1px solid white
  border-radius 50%

.slide-is-active
  background-color #fff

.image-block
  height auto
  float left
  margin 0 5px
  margin 0 1.25vmin
  text-align center

.image-block__image
  width 72px
  width 18.8vmin
  height 72px
  height 18.8vmin
  max-width 72px
  max-height 72px
  margin 10px 0
  margin 2.5vmin 0

  img
    width 100%
    height 100%

.image-block__image--single
  border 1px solid red

.image-block__image--multiple
  border 1px solid green

.days-left
  font-size 20px
  font-size 5vmin
  color #fff

.absenteeWidget__absenteeInformation
  padding-top 30px
  padding-top 8.5vmin

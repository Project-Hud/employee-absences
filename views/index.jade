extends layout

block content
  span(data-absences=JSON.stringify(absences))
  .absenteeWidget
    h1.absenteeWidget__title Absence
    ul
      if absences && absences.length > 0
        each absence in absences
          - dayStr = absence.duration === 1 ? 'day' : 'days'
          li.absenteeWidget__absentee
            img(src=absence.image, alt=absence.name)
            span.absenteeWidget__absenteeInformation #{absence.duration} &nbsp; #{dayStr}
      else
        li.absenteeWidget__absentee
          span.absenteeWidget__absenteeInformation None

    h1.absenteeWidget__title Holiday
    ul
      if holidays && holidays.length > 0
        each holiday in holidays
          - dayStr = holiday.duration === 1 ? 'day' : 'days'
          li.absenteeWidget__absentee
            img(src=holiday.image, alt=holiday.name)
            span.absenteeWidget__absenteeInformation #{holiday.duration} &nbsp; #{dayStr}
      else
        li.absenteeWidget__absentee
          span.absenteeWidget__absenteeInformation None

  script(src='/javascripts/index.js')
